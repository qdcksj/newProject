<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#bfefff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextAppearance="@style/Toolbar.TitleText"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="#006400"
            android:textSize="25sp"
            android:text="入库产品查询"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:textSize="20sp"
                    android:text="选择工序："/>
                <Spinner
                    android:id="@+id/inTypeSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"/>
                <TextView
                    android:id="@+id/inTypeName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/fram"
                    android:textSize="18sp"
                    android:hint="请选择工序名称"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:textSize="20sp"
                    android:text="选择品名："/>
                <AutoCompleteTextView
                    android:id="@+id/queryInNameSearch"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="请输入品名检索"
                    android:completionThreshold="1"
                    android:dropDownHorizontalOffset="5dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="20sp"
                    android:text="吹塑用瓶坯："/>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <AutoCompleteTextView
                        android:id="@+id/queryInPingpiSearch"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:hint="请输入品名检索"
                        android:completionThreshold="1"
                        android:dropDownHorizontalOffset="5dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:textSize="20sp"
                    android:text="选择颜色："/>
                <AutoCompleteTextView
                    android:id="@+id/queryInColorSearch"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="请输入色母号检索"
                    android:completionThreshold="1"
                    android:dropDownHorizontalOffset="5dp" />
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/queryBtm"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/btmgreen1"
                android:textSize="20sp"
                android:text="查询"/>

            <Button
                android:id="@+id/reFreshBtm"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/btmgreen1"
                android:textSize="15sp"
                android:text="返回\n重查"/>
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/selectStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textSize="20sp"
            android:text="开始日期："/>

        <TextView
            android:id="@+id/startDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="buttonFunc1"
            android:layout_marginRight="100dp"
            android:background="@drawable/fram"
            android:hint="点击选择开始日期"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/selectLastDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textSize="20sp"
            android:text="截止日期："/>

        <TextView
            android:id="@+id/lastDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="buttonFunc2"
            android:layout_marginRight="100dp"
            android:background="@drawable/fram"
            android:hint="点击选择截止日期"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#CA8EFF">

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/listQueryInView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:listSelector="#ff7575"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

</LinearLayout>